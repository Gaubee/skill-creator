{
  "name": "skill-creator",
  "version": "1.3.0",
  "description": "Create claude-code-skills with documentation management",
  "bin": {
    "skill-creator": "dist/cli.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "cli": "node dist/cli.js",
    "test": "vitest run",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "pre-release": "node scripts/pre-release-check.js",
    "pre-release-check": "node scripts/pre-release-check.js"
  },
  "keywords": [
    "claude-code",
    "skills",
    "documentation",
    "chromadb",
    "search"
  ],
  "author": "Gaubee",
  "license": "MIT",
  "dependencies": {
    "@chroma-core/default-embed": "^0.1.8",
    "@leeoniya/ufuzzy": "^1.0.19",
    "chromadb": "^3.0.17",
    "commander": "^14.0.1",
    "dedent": "^1.5.3",
    "fuse.js": "^7.1.0",
    "glob": "^11.0.0",
    "gradient-string": "^3.0.0",
    "inquirer": "^12.10.0",
    "markdown-it": "^14.1.0",
    "ora": "^9.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.9",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^24.9.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^27.0.1",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gaubee/skill-creator"
  },
  "files": [
    "dist",
    "templates",
    "README.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
