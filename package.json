{
  "name": "skill-creator",
  "version": "0.0.0",
  "description": "Create claude-code-skills with documentation management",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "claude-code",
    "skills",
    "documentation",
    "chromadb",
    "search"
